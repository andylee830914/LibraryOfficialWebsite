block content
    #isUSER #{isUSER}
    .ui.tablet.computer.only.padded.grid
      #headderBar.ui.inverted.borderless.top.fixed.fluid.menu
        a.header.item(onclick="window.location.href=window.location.href.split( '?' )[0]") 期刊服務
        .right.menu
